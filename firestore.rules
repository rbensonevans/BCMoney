rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BCMONEY SECURITY RULES
     * 
     * Implements a robust User-Ownership Silo model.
     * Users have full access to any path that starts with their UID.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Silo: User Profiles
    // Grants full access to the user's profile and all nested data (balances, recipients, etc.)
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Silo: Accounts
    // Grants full access to the user's account and all nested data (transactions)
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}