rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BCMONEY SECURITY RULES
     * 
     * Implements a strict User-Ownership Silo model.
     * Access is granted to any path starting with /collection/{userId}/...
     * where {userId} matches the authenticated user's UID.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Silo: User Profiles
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Explicitly allow all subcollections (balances, recipients, etc.)
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Silo: Accounts
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Explicitly allow listing and managing transactions for the owner
    match /accounts/{userId}/transactions {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /accounts/{userId}/transactions/{transactionId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Catch-all for other subcollections under accounts
    match /accounts/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}