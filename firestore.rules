
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profile Silo - strictly owner access
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Explicitly matching sub-collections for clarity and debugging
      match /balances/{tokenId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
        
        match /transactions/{transactionId} {
          allow read, write: if isSignedIn() && request.auth.uid == userId;
        }
      }
      
      match /recipients/{recipientId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      
      // Safety recursive rule for any future sub-collections
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Account Identity Silo - strictly owner access
    match /accounts/{accountId} {
      allow read, write: if isSignedIn() && request.auth.uid == accountId;
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == accountId;
      }
    }
  }
}
