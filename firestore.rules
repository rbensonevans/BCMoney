
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Explicit Silo Rules: Access is granted if the root ID matches the authenticated UID.
    // This allows recursive 'get' and 'list' operations on all sub-collections.
    
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Specifically allow access to all sub-collections (balances, recipients)
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /accounts/{accountId} {
      allow read, write: if isSignedIn() && request.auth.uid == accountId;
      
      // Specifically allow access to the transactions collection and its documents
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == accountId;
      }
    }
  }
}
