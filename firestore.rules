
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BCMONEY SECURITY RULES
     * 
     * This ruleset implements a strict User-Ownership "Silo" model.
     * Users have full access (read/write/list) to any document or subcollection
     * where the top-level document ID matches their Firebase Auth UID.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // SILO: User Profiles
    // Covers /user_profiles/{uid} and all subcollections like /balances/{id} or /recipients/{id}
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // SILO: Accounts
    // Covers /accounts/{uid} and all subcollections like /transactions/{id}
    // This explicitly allows 'list' operations on /accounts/{uid}/transactions
    match /accounts/{accountId} {
      allow read, write: if isSignedIn() && request.auth.uid == accountId;
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == accountId;
      }
    }
  }
}
