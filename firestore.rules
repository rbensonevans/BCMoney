rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BCMONEY SECURITY RULES
     * 
     * Implements a robust User-Ownership Silo model.
     * Users have full access to any path that starts with their UID
     * in the primary 'user_profiles' and 'accounts' collections.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Silo: User Profiles
    // Matches the profile document AND all sub-resources (balances, recipients, etc.)
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    match /user_profiles/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Silo: Accounts
    // Matches the account document AND all sub-resources (transactions)
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    match /accounts/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}