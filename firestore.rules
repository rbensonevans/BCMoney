
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Explicit Silo Rules: Access is granted if the root ID matches the authenticated UID.
    
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Specifically allow access to all sub-collections
      match /balances/{tokenId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      match /recipients/{recipientId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      
      // Secondary catch-all for any other nested structures
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /accounts/{accountId} {
      // The Account document itself is accessible by the owner
      allow read, write: if isSignedIn() && request.auth.uid == accountId;
      
      // Transactions collection must be explicitly allowed for 'list' and 'write'
      match /transactions/{transactionId} {
        allow read, write: if isSignedIn() && request.auth.uid == accountId;
      }
      
      // Secondary catch-all for any other nested structures
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == accountId;
      }
    }
  }
}
