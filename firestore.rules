
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profile Silo - Recursive access to profile, balances, and recipients
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Explicit rules for listing subcollections
      match /balances/{tokenId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      match /recipients/{recipientId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Account Silo - Recursive access to account and transactions
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Explicit rule for listing transactions
      match /transactions/{transactionId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}
