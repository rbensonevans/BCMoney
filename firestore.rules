
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BCMONEY SECURITY RULES
     * 
     * Implements a strict User-Ownership Silo model.
     * Access is granted to any path starting with /collection/{userId}/...
     * where {userId} matches the authenticated user's UID.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Silo: User Profiles
    // Matches the profile document itself
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Matches any subcollection under a user profile (balances, recipients, etc.)
    match /user_profiles/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Silo: Accounts
    // Matches the account document itself
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Matches any subcollection under an account (transactions, etc.)
    match /accounts/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
