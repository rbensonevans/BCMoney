rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BCMONEY SECURITY RULES
     * 
     * Implements a robust User-Ownership Silo model.
     * Users have full access to any path that starts with their UID
     * in the primary 'user_profiles' and 'accounts' collections.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Silo: User Profiles
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Explicitly allow all sub-collections and documents
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Silo: Accounts
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Explicitly allow all sub-collections (like transactions)
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}