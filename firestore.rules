
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * DATABASE SECURITY POSTURE AND ARCHITECTURE
     *
     * Core Philosophy:
     * This ruleset implements a strict User-Ownership model. Access to data is gated by the 
     * relationship between the authenticated user and the specific resource.
     *
     * This file has been updated to fix 'Missing or insufficient permissions' errors
     * for transaction listings.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    // --- COLLECTION RULES ---

    // Rules for user profiles and their subcollections
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /balances/{tokenId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }

      match /recipients/{recipientId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Rules for accounts and their transaction history
    // We use {userId} as the accountId for simplified mapping
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /transactions/{transactionId} {
        // Allow the owner of the account path to read and write transactions
        // This explicitly supports 'list' operations on the transactions collection
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}
