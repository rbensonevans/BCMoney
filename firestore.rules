rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BCMONEY SECURITY RULES
     * 
     * Implements a robust User-Ownership Silo model with explicit sub-collection rules.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Silo: User Profiles
    match /user_profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      match /balances/{tokenId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      
      match /recipients/{recipientId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }

      // Catch-all for any other sub-paths
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Silo: Accounts
    match /accounts/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      match /transactions/{transactionId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }

      // Catch-all for any other sub-paths
      match /{allPaths=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}